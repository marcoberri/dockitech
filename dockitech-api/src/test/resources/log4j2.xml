<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
	<Appenders>
		
		<File name="API" fileName="/opt/logs/dockitech-api-test.log" append="true">
			<PatternLayout pattern="%-5p %c{2} - %m%n" />
		</File>
	
		<File name="ADAPTER" fileName="/opt/logs/dockitech-adapter-test.log" append="true">
			<PatternLayout pattern="%-5p %c{2} - %m%n" />
		</File>

		<File name="MORPHIA" fileName="/opt/logs/dockitech-morphia-test.log" append="true">
			<PatternLayout pattern="%-5p %c{2} - %m%n" />
		</File>

		
	
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>





	</Appenders>
	
	<Loggers>
	
	
	
		<Logger name="it.marcoberri.dockitech.adapter" level="debug">
			<AppenderRef ref="ADAPTER" />
		</Logger>

		<Logger name="org.mongodb.morphia" level="debug">
			<AppenderRef ref="MORPHIA" />
		</Logger>
		
		<Logger name="it.marcoberri.dockitech.api" level="debug">
			<AppenderRef ref="API" />
		</Logger>
		

		<Root level="debug">
			<AppenderRef ref="STDOUT" />
		</Root>
		
	</Loggers>
</Configuration>
    