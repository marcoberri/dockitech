<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
	<Appenders>
		
		<File name="API" fileName="/opt/logs/dockitech-api.log" append="true">
			<PatternLayout pattern=">%-5p %c{2} - %m%n" />
		</File>
	
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>

	</Appenders>
	
	<Loggers>
	
		<Logger name="it.marcoberri.dockitech.api" level="debug">
			<AppenderRef ref="API" />
		</Logger>

		<Root level="debug">
			<AppenderRef ref="STDOUT" />
		</Root>
		
	</Loggers>
</Configuration>
    